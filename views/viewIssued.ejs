<!DOCTYPE html>
<html>

<head>
    <title>Issued Books</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f9f9f9;
        }

        h2 {
            text-align: center;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            background-color: #fff;
        }

        th,
        td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #e0e0e0;
        }

        tr:nth-child(even) {
            background-color: #f5f5f5;
        }

        .btn-return {
            background-color: #4CAF50;
            color: white;
            padding: 6px 10px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            border-radius: 4px;
        }

        .btn-return:hover {
            background-color: #45a049;
        }
    </style>
</head>

<body>
    <h2>Issued Books</h2>

    <table>
        <thead>
            <tr>
                <th>Issue ID</th>
                <th>Student Name</th>
                <th>Book Title</th>
                <th>Issue Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% issuedBooks.forEach(book=> { %>
                <tr>
                    <td>
                        <%= book.issue_id %>
                    </td>
                    <td>
                        <%= book.student_name %>
                    </td>
                    <td>
                        <%= book.book_title %>
                    </td>
                    <td>
                        <%= book.issue_date.toISOString().slice(0, 10) %>
                    </td>
                    <td>
                        <%= book.return_date ? book.return_date.toISOString().slice(0, 10) : 'Not returned' %>
                    </td>
                    <td>
                        <%= book.status %>
                    </td>
                    <td>
                        <% if (book.status==='Issued' ) { %>
                            <form action="/returnBook/<%= book.issue_id %>" method="POST"
                                onsubmit="return confirm('Confirm return?');">
                                <button class="btn-return" type="submit">Return</button>
                            </form>
                            <% } else { %>
                                Returned
                                <% } %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>